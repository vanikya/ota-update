{
  "name": "@ota-update/react-native",
  "version": "0.1.0",
  "description": "OTA Update SDK for React Native apps",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "ios",
    "android",
    "*.podspec"
  ],
  "scripts": {
    "build": "bob build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "prepare": "bob build"
  },
  "keywords": [
    "react-native",
    "ota",
    "update",
    "codepush",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/ota-update.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "react": "^18.2.0",
    "react-native": "^0.73.0",
    "react-native-builder-bob": "^0.23.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "expo-file-system": {
      "optional": true
    },
    "expo-crypto": {
      "optional": true
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "codegenConfig": {
    "name": "OTAUpdateSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  }
}

    "form-data": "^4.0.0",
    "inquirer": "^9.2.0",
    "node-fetch": "^3.3.0",
    "ora": "^8.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

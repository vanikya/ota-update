{
  "name": "@ota-update/cli",
  "version": "0.1.0",
  "description": "CLI tool for OTA Update system",
  "bin": {
    "ota": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --clean",
    "dev": "tsup src/index.ts --format cjs --watch",

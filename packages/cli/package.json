{
  "name": "@vanikya/ota-cli",
  "version": "0.1.2",
  "description": "CLI tool for OTA Update system - self-hosted CodePush/EAS Updates alternative",
  "type": "module",
  "bin": {
    "ota": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react-native",
    "ota",
    "update",
    "codepush",
    "eas-updates",
    "expo",
    "cli",
    "over-the-air"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanikya/ota-update.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/vanikya/ota-update#readme",
  "bugs": {
    "url": "https://github.com/vanikya/ota-update/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "form-data": "^4.0.0",
    "inquirer": "^9.2.0",
    "node-fetch": "^3.3.0",
    "ora": "^8.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

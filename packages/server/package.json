{
  "name": "@ota-update/server",
  "version": "0.1.0",
  "private": true,
  "description": "Cloudflare Workers backend for OTA updates",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 execute ota-update-db --local --file=src/db/schema.sql",
    "db:migrate:prod": "wrangler d1 execute ota-update-db --file=src/db/schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.25.0"
  }
}
